<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_topo"
        android:orientation="vertical" >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_raca"
            android:hint="Raça"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_precoMedio"
            android:hint="Preço Médio"
            android:inputType="number"
            />


        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indicado para crianças?"
            android:id="@+id/sw_indicadoCriancas"
            android:layout_marginTop="10dp"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar"
            android:onClick="cadastrarDefinitivo"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:id="@+id/iv_foto" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>